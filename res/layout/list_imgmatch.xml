<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_MatchPer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matching Per : "
                android:gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgMatchFrmServer"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/imgMatchFrmServer"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/style_ImgHdr_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txt_Name"
                            style="@style/style_ImgData_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": Srinivas"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/style_ImgHdr_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txt_FName"
                            style="@style/style_ImgData_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": Srinivas"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/style_ImgHdr_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txt_Age"
                            style="@style/style_ImgData_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": Srinivas"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/style_ImgHdr_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/txt_FirNo"
                            style="@style/style_ImgData_Txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": Srinivas"/>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>