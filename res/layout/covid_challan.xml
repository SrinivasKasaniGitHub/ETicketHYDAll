    <!-- Footer aligned to bottom -->

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/imagefd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/footer"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView3"
            style="@style/footer_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold|italic" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_main_root_spotchallan_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_camera_capture_spotchallan_xml"
                    style="@style/navi_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/capture_image" />

                <ImageButton
                    android:id="@+id/imgv_camera_capture_spotchallan_xml"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/header_grnt_padding_ten"
                    android:background="@drawable/capture"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/imgv_gallery_spotchallan_xml"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/header_grnt_padding_ten"
                    android:background="@drawable/gallery"
                    android:contentDescription="@null" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/ll_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_main_root_spotchallan_xml"
                android:layout_marginTop="@dimen/header_grnt_padding_five"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/offender_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo"
                    android:visibility="gone" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/rl_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_web"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/header_grnt_padding_five">


                <TextView
                    android:id="@+id/selected_pointName_ghf"
                    style="@style/navi_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select ID Proof :"
                    android:layout_margin="5dp"
                    android:layout_alignParentTop="true"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_SlctId_CV"
                    style="@style/dd_custom_blue_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:text="SELECT ID"
                    android:layout_below="@+id/selected_pointName_ghf"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/kjsdhf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/rl_btns">

                <LinearLayout
                    android:id="@+id/ll_driver_challans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/header_grnt_padding_ten"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Enter ID Value :" />

                    <EditText
                        android:id="@+id/et_Value"
                        style="@style/edt_custom_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ/"
                        android:gravity="center"
                        android:inputType="text|textCapCharacters"
                        android:maxLength="25"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/header_grnt_padding_ten"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tex"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Enter DOB :" />

                    <Button
                        android:id="@+id/btn_Dob"
                        style="@style/dd_custom_blue_btn_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_driver_challans"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:hint="Select Date of Birth"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="visible" />


                </LinearLayout>


                <Button
                    android:id="@+id/btn_Get"
                    style="@style/naviblue_custom_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten"
                    android:text="@string/get_details" />
            </LinearLayout>

            <!--// Get Details //-->

            <View
                android:id="@+id/viewl"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9B9B9"
                android:layout_below="@+id/kjsdhf"
                android:layout_marginTop="@dimen/_3sdp"/>

            <LinearLayout
                android:id="@+id/lyt_GetDtls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/viewl"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_3sdp">


                <!-- isOD details start -->

                <LinearLayout
                    android:id="@+id/ll_isOwner_isDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_drivertype_spot_xml"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Person Details"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_drivername_isOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/header_grnt_padding_ten"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.27"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/star"
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:text=""
                            android:textColor="#ff0000"/>


                        <EditText
                            android:id="@+id/edtTxt_Name"
                            style="@style/edt_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:inputType="text|textCapCharacters"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/header_grnt_padding_ten"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.27"
                            android:text="Father's Name" />

                        <TextView
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:text=""
                            android:textColor="#ff0000"/>


                        <EditText
                            android:id="@+id/edtTxt_FName"
                            style="@style/edt_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:inputType="text|textCapCharacters"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_address_isOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/header_grnt_padding_ten"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".30"
                            android:text="@string/address_res" />

                        <EditText
                            android:id="@+id/et_Address"
                            style="@style/edt_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:gravity="top|left"
                            android:inputType="textMultiLine|textCapCharacters"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="4"
                            android:scrollbars="vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_city_isOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/header_grnt_padding_ten"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/navi_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".30"
                            android:text="@string/city_or_district" />

                        <EditText
                            android:id="@+id/et_City"
                            style="@style/edt_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:gravity="center"
                            android:inputType="textCapCharacters"/>
                    </LinearLayout>


                </LinearLayout>
                <!-- isOD details end -->

                <LinearLayout
                    android:id="@+id/lyt_Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_gender"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtAge"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".30"
                        android:text="@string/txt_DRName" />


                    <EditText
                        android:id="@+id/edt_Age"
                        style="@style/edt_custom_style"
                        android:layout_width="0dp"
                        android:layout_weight=".70"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/header_grnt_padding_five"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLength="2"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_driverfathername_isOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/header_grnt_padding_ten"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".30"
                        android:text="Contact No " />

                    <LinearLayout
                        android:id="@+id/ll_contactnum_spotchallantwo_xml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/header_grnt_padding_five"
                        android:orientation="horizontal"
                        android:layout_weight=".70"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/et_CntctNo"
                            style="@style/edt_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".70"
                            android:hint="@string/driver_contact_no"
                            android:inputType="number"
                            android:maxLength="10"/>

                        <Button
                            android:id="@+id/btn_Otp"
                            style="@style/naviblue_custom_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/header_grnt_padding_five"
                            android:text="OTP"
                            android:layout_weight=".30"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_driverfathername_isOD"
                        style="@style/edt_custom_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:gravity="center"
                        android:inputType="text|textCapCharacters"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_isOwner_isDriver"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/header_grnt_padding_five"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_gendername"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="@string/gender" />

                    <RadioGroup
                        android:id="@+id/radioGroup_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rBtn_Male"
                            style="@style/dd_custom_radio_btn_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/header_grnt_padding_ten"
                            android:text="@string/gen_male" />

                        <RadioButton
                            android:id="@+id/rBtn_FeMale"
                            style="@style/dd_custom_radio_btn_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/header_grnt_padding_ten"
                            android:text="@string/gen_female" />

                        <RadioButton
                            android:id="@+id/rBtn_Others"
                            style="@style/dd_custom_radio_btn_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/header_grnt_padding_ten"
                            android:text="@string/gen_others" />
                    </RadioGroup>
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/ll_pendingchallans"
                    style="@style/naviblue_custom_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lyt_Age"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_twenty"
                    android:layout_marginTop="@dimen/margin_twenty"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_challans_label"
                            style="@style/text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total No. of Pending Challans"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textView5"
                            style="@style/text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.2"
                            android:text=":   " />

                        <TextView
                            android:id="@+id/tv_pendingchallans"                            style="@style/text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_pendingamnt"
                            style="@style/text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Pending Amount" />

                        <TextView
                            android:id="@+id/textView_semicolon"
                            style="@style/text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text=":   " />

                        <TextView
                            android:id="@+id/tv_pendingamount"
                            style="@style/text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vehicle_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_pendingchallans_spot_xml"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/police_vehcle"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="10dp"
                        android:text="Police Vehicle" />

                    <CheckBox
                        android:id="@+id/govt_vehcle"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="10dp"
                        android:text="Government Vehicle" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_whlr_code_spotchallan_xml"
                    style="@style/dd_custom_blue_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lyt_Age"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/header_grnt_padding_five"
                    android:text="@string/select_wheeler_code"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_violation"
                    style="@style/dd_custom_blue_btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_whlr_code_spotchallan_xml"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/header_grnt_padding_five"
                    android:text="@string/select_violation" />

                <LinearLayout
                    android:id="@+id/ll_extraviolations_spotchallan_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_violation_spotchallan_xml"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView_extraviolation_label"
                        style="@style/navi_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No. of Persons" />

                    <TextView
                        android:id="@+id/textView_semicolons"
                        style="@style/navi_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text=":   " />

                    <EditText
                        android:id="@+id/edt_extarviolat_spotchallan_xml"
                        style="@style/edt_custom_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/header_grnt_padding_five"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_4_spot_challan_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_extraviolations_spotchallan_xml"
