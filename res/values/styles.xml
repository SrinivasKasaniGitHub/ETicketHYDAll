<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="TextColor">
    <item name="android:textColor">#0c1931</item>
        <item name="android:textSize">@dimen/_9sdp</item>
</style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- LINKED WITH LOGIN BUTTON STYLE -->
    <style name="text_style">
        <item name="android:textSize">@dimen/_10sdp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- FOR HEADER_BG TEXT HYD TRFC POLICE -->
    <style name="header_text_style" parent="text_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cust_text_style" parent="text_style">
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>

    <style name="style_TxtHedForm" style="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#03044b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="style_InputLayout" parent="Base.TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#696969</item>
        <item name="android:textColorHint">#696969</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="style_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#4D61A6</item>
        <item name="android:textColorHint">#d6d5d5</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="cust_text_style_Label" parent="text_style">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="navi_text_style" parent="text_style">
        <item name="android:textColor">@color/navi_color</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="detained_text_style" parent="text_style">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <!-- FOR HEADER_BG -->
    <style name="header_style">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/header_grdnt</item>
    </style>
    <!-- HEADER SIDE IMAGES LOGO -->
    <style name="header_images_style_left">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:src">@drawable/htp_left</item>
    </style>

    <!-- HEADER SIDE IMAGES LOGO RIGHT -->
    <style name="header_images_style_right" parent="header_images_style_left">
        <item name="android:src">@drawable/hcp_right</item>
    </style>

    <!-- FOR LOGIN EDITTEXT STYLE -->
    <style name="edt_custom_style">
        <item name="android:background">@drawable/transbg_style</item>
        <item name="android:textColorHint">#585858</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!-- FOR SETTINGS ET_STYLE -->
    <style name="edt_custom_settings_style" parent="edt_custom_style">
        <item name="android:background">@drawable/transbg_white_style</item>
    </style>

    <!-- FOR LOGIN BUTTON STYLE -->
    <style name="green_custom_style" parent="text_style">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/login_blue_btn_style</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="orange_custom_style" parent="green_custom_style">
        <item name="android:background">@drawable/login_orange_btn_style</item>
    </style>

    <style name="naviblue_custom_style" parent="green_custom_style">
        <item name="android:background">@drawable/navi_blue_btn_style</item>
    </style>

    <!-- DRUNK & DRIVE TEXT STYLE -->
    <!-- FOR HEADER_BG TEXT HYD TRFC POLICE -->
    <style name="drunkdrive_text_style" parent="text_style">
        <item name="android:textSize">16dp</item>
    </style>

    <!-- DRUN AND DRIVE BLUE BTN STYLE -->
    <style name="dd_custom_blue_btn_style">
        <item name="android:background">@drawable/drun_drive_btn_style_blue</item>
        <item name="android:drawableRight">@drawable/down</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/navi_color</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <!-- DRUN AND DRIVE BLUE BTN STYLE WITHOUT DOWN ARROW -->
    <style name="custom_blue_btn_style" parent="dd_custom_blue_btn_style">
        <item name="android:drawableRight">@null</item>
    </style>

    <!-- DRUN AND DRIVE RADIO BTN STYLE -->
    <style name="dd_custom_radio_btn_style">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/navi_color</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    
    
    <style name="dd_custom_radio_btn_style_isDriver_isOwner" parent="dd_custom_radio_btn_style">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!-- DRUN AND DRIVE CHECK BOX BTN STYLE -->
    <style name="dd_custom_check_box_style" parent="dd_custom_radio_btn_style">
        <item name="android:button">@drawable/custom_chec_box</item>
        <item name="android:paddingLeft">@dimen/header_grnt_padding_ten</item>
    </style>

    <!-- FOOTER STYLE -->
    <style name="footer_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:text">@string/footer_txt</item>
        <item name="android:background">#3e50b4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/header_grnt_padding_ten</item>
    </style>

    <!-- DASHBOARD MARGINS STYLE TOP AND BOTTOM -->
    <style name="margin_top_btm_style">
        <item name="android:layout_marginTop">@dimen/header_grnt_padding_ten</item>
        <item name="android:layout_marginBottom">@dimen/header_grnt_padding_ten</item>
    </style>

    
    
    <style name="TransparentProgressDialogWithPngImage"
		parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item   name="android:windowAnimationStyle">  @android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
   
 </style>

    <style name="style_ImgHdr_Txt" style="@style/Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#040666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="style_ImgData_Txt" style="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">#4E10BB</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
</resources>